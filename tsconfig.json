{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@public/*": ["../public/*"],
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@config/*": ["./config/*"],
      "@config": ["./config"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"],
      "@tests/*": ["./tests/*"],
      "@tests": ["./tests"],
      "@pages/*": ["./pages/*"]
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": ["next-env.d.ts", "next.config.js", "jest.config.js", "src", "types", "bin"]
}
